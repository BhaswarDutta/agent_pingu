/*****----- Configuration -----*****/
configuration {
	modi:                       "drun";
	show-icons:                 true;
	display-drun:               "ï€‚ ";
	drun-display-format:        "{name}";
	icon-theme: "Papirus";
}

/*****----- Global Variables -----*****/
* {
    /* For Screens with 1920x1080 resolution */
    screen-margin:               180px 150px;
    box-spacing:                 40px;
    icon-size:                   96px;
    element-padding:             30px;
    element-spacing:             15px;
    font:                        "Adwita Sans Bold 10";

    /* Catppuccin Mocha palette */
    background:     #1E1D2FFF;    /* Base */
    background-alt: #282839FF;    /* Surface */
    foreground:     #D9E0EEFF;    /* Text */
    selected:       #7AA2F7FF;    /* Blue */
    active:         #ABE9B3FF;    /* Green */
    urgent:         #F28FADFF;    /* Pink */
}

/*****----- Main Window -----*****/
window {
    transparency:                "real";
    location:                    center;
    anchor:                      center;
    fullscreen:                  true;
    width:                       1366px;
    height:                      768px;
    x-offset:                    0px;
    y-offset:                    0px;

    enabled:                     true;
    margin:                      0px;
    padding:                     0px;
    border:                      0px;
    border-radius:               0px;
    background-color:            rgba(30, 29, 47, 0.7); /* semi-transparent window */
    cursor:                      "default";
}

/*****----- Main Box -----*****/
mainbox {
    enabled:                     true;
    spacing:                     @box-spacing;
    margin:                      @screen-margin;
    padding:                     0px;
    border:                      0px;
    border-radius:               0px;
    background-color:            transparent;
    children:                    [ "inputbar", "listview" ];
}

/*****----- Inputbar -----*****/
inputbar {
    enabled:                     true;
    spacing:                     10px;
    margin:                      0px 50% 0px 0px;
    padding:                     15px;
    border:                      0px;
    border-radius:               100%;
    background-color:            @selected;
    text-color:                  @background;
    children:                    [ "prompt", "entry" ];
}

prompt, textbox-prompt-colon, entry {
    background-color:            inherit;
    text-color:                  inherit;
}

/*****----- Listview -----*****/
listview {
    enabled:                     true;
    columns:                     8;
    lines:                       5;
    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   false;
    layout:                      vertical;
    reverse:                     false;
    fixed-height:                false;
    fixed-columns:               false;

    spacing:                     @element-spacing;
    margin:                      0px;
    padding:                     0px;
    border:                      0px;
    background-color:            transparent;
    text-color:                  @foreground;
    cursor:                      "default";
}

/*****----- Elements -----*****/
element {
    enabled:                     true;
    spacing:                     @element-spacing;
    margin:                      0px;
    padding:                     @element-padding;
    border:                      0px;
    border-radius:               30px;
    background-color:            transparent;
    text-color:                  @foreground;
    orientation:                 vertical;
    cursor:                      pointer;
}

/* Fix: remove opaque white/solid background */
element normal.normal {
    background-color:            transparent;
    text-color:                  @foreground;
}

element alternate.normal {   /* add this */
    background-color: transparent;
    text-color:       @foreground;
}
/* Highlight selection with soft glow */
element selected.normal {
    border:                      0px 0px 4px 0px;
    border-color:                @selected;
    background-color:            rgba(40, 40, 57, 0.6);
    text-color:                  @foreground;
}

element-icon {
    background-color:            transparent;
    text-color:                  inherit;
    size:                        @icon-size;
    cursor:                      inherit;
}

element-text {
    background-color:            transparent;
    text-color:                  inherit;
    highlight:                   inherit;
    cursor:                      inherit;
    vertical-align:              0.5;
    horizontal-align:            0.5;
}

/*****----- Message -----*****/
error-message, textbox {
    padding:                     150px;
    border:                      0px;
    border-radius:               0px;
    background-color:            @background;
    text-color:                  @foreground;
    vertical-align:              0.5;
}
